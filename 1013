  text-align: left;
  font-size: 1.1em;
}

td {
  padding: 12px 15px;
  border-bottom: 1px solid #f5c6d6; /* 我修改底線顏色：更柔和的粉色 */
  color: #555;
}

tr:last-child td {
  border-bottom: none;
}

tr:hover {
  background-color: #ffe4ec; /* 我修改懸浮列背景：由 #f0f0ff → 淡粉色 */
}

/* 超連結樣式 */
a {
  color: #ff6f91; /* 我修改連結主色：由 #667eea → #ff6f91 */
  text-decoration: none;
  font-weight: bold;
  transition: all 0.3s ease;
  position: relative;
}

a:hover {
  color: #ff9a9e; /* 我修改懸浮色：由 #764ba2 → #ff9a9e */
}

a::after {
  content: '';
  position: absolute;
  width: 0;
  height: 2px;
  bottom: -2px;
  left: 0;
  background-color: #ff9a9e; /* 同步修改底線顏色 */
  transition: width 0.3s ease;
}

a:hover::after {
  width: 100%;
}

/* 圖片樣式 */
.profile-img {
  width: 320px; /* 我放大圖片尺寸：由 300 → 320px */
